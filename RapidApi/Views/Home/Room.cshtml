@model BookingModel
@{
    ViewData["Title"] = "Room";
}

    <!-- Breadcrumb Section Begin -->
    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <h2>Our Rooms</h2>
                        <div class="bt-option">
                            <a href="./home.html">Home</a>
                            <span>Rooms</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Section End -->

    <!-- Rooms Section Begin -->
    <section class="rooms-section spad">
        <div class="container">
            <div class="row">
                @if (Model.data.hotels.Count() > 0)
                {
                    @foreach (var item in Model.data.hotels)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="room-item">
                                <img src="@item.property.photoUrls[0]" alt="">
                                <div class="ri-text">
                                    <h4>@item.property.name</h4>
                                    <h3>@item.property.reviewCount<span> / @item.property.currency</span></h3>
                                    <table>
                                        <tbody>
                                            <tr>
                                                <td class="r-o">@item.property.wishlistName</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <span>@item.accessibilityLabel</span>
                                    <a asp-controller="Home" asp-action="RoomDetail" asp-route-hotel_id="@item.hotel_id" asp-route-arrival_date="@item.property.checkinDate" asp-route-departure_date="@item.property.checkoutDate" class="primary-btn">daha fazla...</a>
                                </div>
                            </div>
                        </div>
                    }
                } else
                {
                    <div class="alert alert-warning m-auto" role="alert">
                        Lütfen arama yapın
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- Rooms Section End -->